<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid fill color for the EditText background -->
    <solid android:color="#FFFFFF" />

    <!-- Border color and width -->
    <stroke
        android:width="2dp"
        android:color="#D3D3D3" /> <!-- Light gray border -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Padding inside the EditText -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />
</shape>
