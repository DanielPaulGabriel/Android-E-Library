<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Button (Arrow Icon) -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/back_button"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnBack"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivBookCover"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tvBookTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvBookAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvBookSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReadBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Read"
                android:textColor="@android:color/white"
                android:backgroundTint="#736ff5"
                app:icon="@drawable/ic_borrowed_books"
                app:iconGravity="textStart"
                app:iconSize="25dp"
                app:iconTint="@android:color/white"
                app:iconPadding="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnListenBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Listen"
                app:icon="@drawable/ic_audiobook"
                android:textColor="@android:color/white"
                android:backgroundTint="#736ff5"
                app:iconSize="25dp"
                app:iconTint="@android:color/white"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Review"
                app:icon="@drawable/ic_staff_reviews"
                android:textColor="@android:color/white"
                android:backgroundTint="#736ff5"
                app:iconSize="25dp"
                app:iconTint="@android:color/white"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShareBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Share"
                android:textColor="@android:color/white"
                android:backgroundTint="#736ff5"
                app:icon="@drawable/ic_share"
                app:iconSize="25dp"
                app:iconTint="@android:color/white"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReturnBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Return"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_red_dark"
                app:icon="@drawable/ic_return_book"
                app:iconSize="25dp"
                app:iconTint="@android:color/white"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />


        </LinearLayout>
    </RelativeLayout>
</ScrollView>
