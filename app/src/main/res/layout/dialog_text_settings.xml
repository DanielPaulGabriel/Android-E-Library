<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView android:text="Font Size" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <SeekBar android:id="@+id/seekBarFontSize" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="40" android:min="12"/>

    <TextView android:text="Line Spacing" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <SeekBar android:id="@+id/seekBarLineSpacing" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="30" android:min="10"/>

    <TextView android:text="Font Type" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Spinner android:id="@+id/spinnerFontType" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <TextView android:text="Background Color" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Spinner android:id="@+id/spinnerBgColor" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button android:id="@+id/btnApplySettings" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Apply" android:backgroundTint="#736ff5" android:textColor="@android:color/white"/>
</LinearLayout>
